---
import { Image } from "astro:assets";
import gallery_wall from "../../assets/gallery_wall.png";

const mentors = [
  {
    name: "Mentor I",
    title: "King of Spain",
    position: { top: "40%", left: "0%", width: "13%", height: "25%" },
  },
  {
    name: "Mentor II",
    title: "King Haakon VII of Norway",
    position: { top: "18%", left: "15%", width: "10%", height: "32%" },
  },
  {
    name: "Mentor III",
    title: "Tsar Ferdinand of the Bulgarians",
    position: { top: "58%", left: "15%", width: "10%", height: "32%" },
  },
  {
    name: "Mentor IV",
    title: "King Manuel II of Portugal",
    position: { top: "70%", left: "29%", width: "12%", height: "30%" },
  },
  {
    name: "Mentor V",
    title: "Kaiser of Germany",
    position: { top: "0%", left: "43%", width: "12%", height: "30%" },
  },
  {
    name: "Mentor VI",
    title: "King George I of the Hellenes",
    position: { top: "70%", left: "59%", width: "12%", height: "30%" },
  },
  {
    name: "Mentor VII",
    title: "King Albert I of the Belgians",
    position: { top: "15%", left: "75%", width: "10%", height: "32%" },
  },
  {
    name: "Mentor VIII",
    title: "King Frederick VIII of Denmark",
    position: { top: "55%", left: "75%", width: "10%", height: "32%" },
  },
  {
    name: "Mentor IX",
    title: "King George V of the United Kingdom",
    position: { top: "32%", left: "87%", width: "13%", height: "30%" },
  },
  {
    name: "Jury I",
    title: "Alexander the Great",
    position: { top: "13%", left: "29%", width: "12%", height: "55%" },
  },
  {
    name: "Jury II",
    title: "Holy Roman Emperor Charles V",
    position: { top: "35%", left: "44%", width: "12%", height: "55%" },
  },
  {
    name: "Jury III",
    title: "Thutmose of Egypt",
    position: { top: "13%", left: "59%", width: "11%", height: "55%" },
  },
];
---

<div class="gallery-container" id="mentors">
  <h1>Mentors and Jury</h1>

  <div class="image-wrapper">
    <Image
      src={gallery_wall}
      alt="Gallery Wall"
      class="gallery-image"
      width={700}
    />

    {
      mentors.map((mentor) => (
        <div
          class="hotspot"
          style={`
            top: ${mentor.position.top}; 
            left: ${mentor.position.left}; 
            width: ${mentor.position.width};
            height: ${mentor.position.height};
          `}
        >
          <div class="mentor-info">
            <h3>{mentor.name}</h3>
            <p>{mentor.title}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .gallery-container {
    position: absolute;
    top: 39%;
    width: 100%;
    height: 80vh;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .gallery-container h1 {
    font-family: "Pixelify Sans", sans-serif;
    font-size: 4rem;
    margin: 0;
    color: #f7d028;
    margin-bottom: 12vh;
  }

  .image-wrapper {
    position: relative;
    display: inline-block;
  }

  .gallery-image {
    display: block;
    width: 700px;
    height: auto;
  }

  .hotspot {
    position: absolute;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .hotspot:hover {
    filter: drop-shadow(0 0 20px rgba(255, 215, 0, 1))
      drop-shadow(0 0 40px rgba(255, 215, 0, 0.9))
      drop-shadow(0 0 60px rgba(255, 215, 0, 0.7));
    transform: scale(1.05);
    z-index: 100;
  }

  .mentor-info {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: white;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.9);
    font-family: "Pixelify Sans", sans-serif;
    opacity: 0;
    transition: opacity 0.3s;
    pointer-events: none;
    white-space: nowrap;
  }

  .hotspot:hover .mentor-info {
    opacity: 1;
  }

  .mentor-info h3 {
    margin: 0 0 5px 0;
    font-size: 1.2rem;
  }

  .mentor-info p {
    margin: 0;
  }
</style>
