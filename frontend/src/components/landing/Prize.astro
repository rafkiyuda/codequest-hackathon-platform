---
const prizes = [
  {
    rank: "1st",
    prize: "Rp 8 million",
    position: { top: "13%", left: "39%", width: "25%", height: "55%" },
  },
  {
    rank: "2nd",
    prize: "Rp 2 million",
    position: { top: "20%", left: "7%", width: "25%", height: "55%" },
  },
  {
    rank: "3rd",
    prize: "Rp 0.8 million",
    position: { top: "20%", left: "72%", width: "25%", height: "55%" },
  },
];
---

<div class="prize-container" id="prize">
  <h1>Prize</h1>

  <div class="image-wrapper">
    {
      prizes.map((prize) => (
        <div
          class="hotspot"
          style={`
            top: ${prize.position.top}; 
            left: ${prize.position.left}; 
            width: ${prize.position.width};
            height: ${prize.position.height};
          `}
        >
          <div class="prize-info">
            <h3>{prize.rank}</h3>
            <p>{prize.prize}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .prize-container {
    position: absolute;
    top: 46%;
    width: 100%;
    height: 66vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .prize-container h1 {
    font-family: "Pixelify Sans", sans-serif;
    font-size: 4rem;
    margin: 0;
    color: #f7d028;
    margin-bottom: 10vh;
  }

  .image-wrapper {
    position: relative;
    display: inline-block;
    height: 40vh;
    width: 30vw;
  }

  .hotspot {
    position: absolute;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .hotspot:hover {
    filter: drop-shadow(0 0 20px rgba(255, 215, 0, 1))
      drop-shadow(0 0 40px rgba(255, 215, 0, 0.9))
      drop-shadow(0 0 60px rgba(255, 215, 0, 0.7));
    transform: scale(1.05);
    z-index: 100;
  }

  .prize-info {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: white;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.9);
    font-family: "Pixelify Sans", sans-serif;
    white-space: nowrap;
  }

  .prize-info h3 {
    margin: 0 0 2px 0;
    font-size: 2rem;
  }

  .prize-info p {
    margin: 0;
    font-size: 1.4rem;
    opacity: 0;
    transition: opacity 0.3s;
    pointer-events: none;
  }

  .hotspot:hover .prize-info p {
    opacity: 1;
  }
</style>
