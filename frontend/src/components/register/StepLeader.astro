<section>
  <h2>Leader Information</h2>

  <div class="form-group">
    <label>Full Name</label>
    <input type="text" id="fullName" placeholder="Jessica Alexandria" />
    <small class="error-text" id="fullNameError"></small>
  </div>

  <div class="form-group">
    <label>Email</label>
    <input type="email" id="email" placeholder="jessica@gmail.com" />
    <small class="error-text" id="emailError"></small>
  </div>

  <div class="form-group">
    <label>Whatsapp Number</label>
    <input type="tel" id="whatsappNumber" placeholder="08xxxxxxxx" />
    <small class="error-text" id="whatsappNumberError"></small>
  </div>

  <div class="form-group">
    <label>LINE ID</label>
    <input type="text" id="lineId" placeholder="Jessica_A" />
    <small class="error-text" id="lineIdError"></small>
  </div>

  <div class="form-group">
    <label>Github / Gitlab ID</label>
    <input type="text" id="github" placeholder="jessica_a" />
    <small class="error-text" id="githubError"></small>
  </div>

  <div class="form-group">
    <label>Birth Place</label>
    <select id="birthPlace">
      <option value="" selected disabled hidden>Select city</option>
    </select>
    <small class="error-text" id="birthPlaceError"></small>
  </div>

  <div class="form-group">
    <label>Birth Date</label>
    <input type="date" id="birthDate" />
    <small class="error-text" id="birthDateError"></small>
  </div>

  <div class="form-group">
    <label>Upload CV</label>
    <input type="file" id="cvUpload" accept=".pdf" />
    <small>Format file: PDF</small>
    <small class="error-text" id="cvError"></small>
  </div>

  <div class="form-group hidden" id="flazzUpload">
    <label>Upload Flazz Card</label>
    <input type="file" id="flazzFile" accept=".jpg,.png" />
    <small>Format file: JPG, PNG</small>
    <small class="error-text" id="flazzError"></small>
  </div>

  <div class="form-group hidden" id="idCardUpload">
    <label>Upload ID Card</label>
    <input type="file" id="idCardFile" accept=".jpg,.png" />
    <small>Format file: JPG, PNG</small>
    <small class="error-text" id="idCardError"></small>
  </div>
</section>
